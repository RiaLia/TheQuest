<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backcopy"
    tools:context="com.example.ria.thequest.Game">


    <Button
        android:id="@+id/adventureButton"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="196dp"
        android:layout_height="84dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="285dp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="adventureClicked"
        android:text="@string/Adventure"
        android:textSize="30sp"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shopButton"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="196dp"
        android:layout_height="84dp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="marketClicked"
        android:text="@string/marketplace"
        android:textSize="30sp"
        android:typeface="serif"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/adventureButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
