<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forestcopy"

    tools:context="com.example.ria.thequest.Adventure">


    <ImageView
        android:id="@+id/rock"
        android:layout_width="346dp"
        android:layout_height="482dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rock" />

    <ImageView
        android:id="@+id/dragon"
        android:layout_width="346dp"
        android:layout_height="482dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dragon" />

    <Button
        android:id="@+id/fightButton"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="96dp"
        android:layout_height="59dp"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="75dp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="fightClicked"
        android:text="@string/Fight"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="424dp" />

    <Button
        android:id="@+id/runButton"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="96dp"
        android:layout_height="59dp"
        android:layout_marginEnd="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="runClicked"
        android:text="@string/Run"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/fightButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fightButton" />

    <Button
        android:id="@+id/tryButton"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="tryClicked"
        android:text="@string/tryButton"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fightButton"
        app:layout_constraintVertical_bias="0.13" />

</android.support.constraint.ConstraintLayout>
